# Database
DATABASE_URL="postgresql://username:password@localhost:5432/smart_kitchen"

# JWT Secret (generate a random string - minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-here-minimum-32-characters-long-for-security"

# OpenAI API Key for AI features and OCR processing
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# Cloudflare R2 Storage (for file uploads and OCR images)
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://your-r2-public-url.r2.dev"
R2_ACCOUNT_ID="your-cloudflare-account-id"

# Email Configuration (Mailgun for notifications and reminders)
SMTP_HOST="smtp.mailgun.org"
SMTP_PORT=587
SMTP_USER="your-smtp-user@your-domain.com"
SMTP_PASS="your-smtp-password"
SMTP_FROM="your-from-email@your-domain.com"

# Mailgun Configuration
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-domain.com"
MAILGUN_API_URL="https://api.mailgun.net/v3/your-domain.com"

# Gmail Configuration (alternative email option)
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# Redis (for background jobs and caching)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=4000
HOST="0.0.0.0"
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_API_URL="http://localhost:4000/graphql"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Smart Kitchen Manager"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=180000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=60000

# Optional: Analytics (if you want to add them later)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="your-ga-id"
# NEXT_PUBLIC_GTM_ID="your-gtm-id"
