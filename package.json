{
  "name": "smart-kitchen-manager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "pnpm install:all && turbo build",
    "build:api": "cd packages/db && pnpm prisma generate && cd ../../apps/api && pnpm install && pnpm build",
    "build:web": "cd packages/db && pnpm prisma generate && cd ../../apps/web && pnpm install && pnpm build",
    "start": "turbo start",
    "start:api": "cd apps/api && pnpm start",
    "start:web": "cd apps/web && pnpm start",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "cd packages/db && pnpm prisma studio",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "setup": "./scripts/setup-backend.sh",
    "api:dev": "cd apps/api && pnpm dev",
    "web:dev": "cd apps/web && pnpm dev",
    "install:all": "pnpm install && cd packages/db && pnpm prisma generate"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.7",
    "eslint": "^9.15.0",
    "prettier": "^3.3.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
